{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",

    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "rootDir": "src",

    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": false,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "./dist", "vitest.config.ts", "src/**/*.spec.ts"]
}
